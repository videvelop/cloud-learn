{
    "Resources": {
        "CHWEC2NodejsRehost": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "UserData" : {
                    "Fn::Base64" : { "Fn::Join" : ["", [
"#!/bin/bash -xe",
"yum update -y ",
 "curl --silent --location https://rpm.nodesource.com/setup_14.x |bash - ",
 "yum install yarn nodejs -y ",
 "yum install git -y ",
 "git clone https://github.com/videvelop/cloud-learn.git ",
 "cd cloud-learn/hello-worlds/001-nodejs-microservice-restapi-noauth/ ",
 "npm install ",
 "npm run start"

                    ]]}}

                },
            "ImageId" : "ami-0f9fc25dd2506cf6d",
            "KeyName" : { "Ref" : "CHWKeypair" },
            "InstanceType" : "t2.micro",
            "SecurityGroups" : [{ "Ref" : "CHWSecGroup" }]
            },
            "DependsOn": [
                "CHWSecGroup",
                "CHWKeypair"
            ]
        },
        "CHWSecGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Enable SSH access via port 22 and nodejs port",
                "SecurityGroupIngress": [
                    { "CidrIp": "0.0.0.0/0", "FromPort": 22, "IpProtocol": "tcp", "ToPort": 22 },
                    { "CidrIp": "0.0.0.0/0", "FromPort": 9001, "IpProtocol": "tcp", "ToPort": 9001 }
                ]
            }
        },
         "CHWKeypair": {
            "Type": "AWS::EC2::KeyPair",
            "Properties": {
                "KeyName": "chwcfec2nodejsrehost",
                "PublicKeyMaterial":"ssh-rsa  vimala@LAPTOP-MN5N48F6"
            }
        }
    }
}